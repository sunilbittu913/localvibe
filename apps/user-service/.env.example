# ============================================
# LocalVibe User Service - Environment Configuration
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=/api

# Database Configuration (PostgreSQL)
# Option 1: Use a full connection string (recommended for production / Render)
DATABASE_URL=postgres://postgres:your_password_here@localhost:5432/localvibe

# Option 2: Use individual connection parameters (used as fallback if DATABASE_URL is empty)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=localvibe

# JWT Configuration
JWT_ACCESS_SECRET=your_access_token_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_token_secret_here_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:4200,http://localhost:4201,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
