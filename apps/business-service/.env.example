# ============================================
# LocalVibe Business Service - Environment Configuration
# ============================================

# Server Configuration
NODE_ENV=development
BUSINESS_SERVICE_PORT=3002

# Database Configuration (PostgreSQL)
# Option 1: Use a full connection string (recommended for production / Render)
DATABASE_URL=postgres://postgres:your_password_here@localhost:5432/localvibe

# Option 2: Use individual connection parameters (used as fallback if DATABASE_URL is empty)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=localvibe

# JWT Configuration (for token validation)
JWT_ACCESS_SECRET=your_access_token_secret_here_min_32_chars
